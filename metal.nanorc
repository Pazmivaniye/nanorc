syntax "Metal" "\.metal$"
color white,black ".*"
color brightwhite "\b(float|double|bool|char|int|short|long|sizeof|enum|void|static|const|struct|union|typedef|extern|(un)?signed|inline)\b"
color brightwhite "\b(class|namespace|template|public|protected|private|typename|this|friend|virtual|using|mutable|volatile|register|explicit|false|true)\b"
color brightwhite "\b(for|if|while|do|else|case|default|switch)\b"
color brightwhite "\b(try|throw|catch|operator|new|delete)\b"
color brightwhite "\b((const|dynamic|reinterpret|static)_cast)\b"
color brightwhite "\b(alignas|alignof|asm|auto|compl|concept|constexpr|decltype|export|noexcept|nullptr|requires|static_assert|thread_local|typeid)\b"
color brightwhite "\b(and|and_eq|bitand|bitor|not|not_eq|or|or_eq|xor|xor_eq)\b"
color brightwhite "\b(goto|continue|break|return)\b"
color brightwhite "[A-Za-z_0-9]*__[A-Za-z_0-9]*"
color brightwhite "\b_[A-Z][A-Za-z_0-9]*"
color brightwhite "^\s*#(define|if|endif|else|elif|ifdef|ifndef|undef|include|pragma|error)\b"
color brightwhite "^\s*#import\b"
color brightwhite "\b(float|half|uint)([2-4]|2x2|3x3|4x4)?\b"
color brightwhite "\b(device|constant|threadgroup|thread)\b"
color brightwhite "\b(vertex|fragment)\b"
color green "//.*"
color green "/\*.*\*/"
color green "/\*([^\*]*|[^\*]*\*[^/]*)"
color green start="/\*" end="\*/"
color ,white "	" "\s+$"
