syntax "GLSL" "\.(frag|vert|glsl)$"
color white,black ".*"
color brightwhite "\b(for|if|while|do|else|case|default|switch|bool|float|int|uint|uniform|in|out|inout|return|([ui])?(vec|mat)[2-4]|void|layout|const|struct|([ui])?sampler[1-3]D)\b"
color brightwhite "\b(texture|textureSize|fract|min|max|mix|clamp|abs|smoothstep|pow|mul|sin|cos|tan|asin|acos|atan|atan2|normalize|length)\b"
color brightwhite "^\s*#(define|if|endif|else|elif|ifdef|ifndef|undef|include|pragma|error|version|extension)\b"
color brightwhite "gl_[A-Za-z_0-9]+"
color brightblack "//.*"
color brightblack "/\*.*\*/"
color brightblack "/\*([^\*]*|[^\*]*\*[^/]*)"
color brightblack start="/\*" end="\*/"
color ,white "	" "\s+$"
